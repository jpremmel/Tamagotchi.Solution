@using Tamagotchi.Models;
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Tamagotchi</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
        <link href="~/css/styles.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        <div class="container">
            <h1>Your Pets</h1>
            @for (int i = 0; i < @Model.Count; i++)
            {
                <h3>@Model[i].Name </h3>
                <ul>
                    <li>Food level: @Model[i].FoodLevel 
                        <form method="post" action="/tamagotchis/feed/{i}"> 
                            <button type="submit" class="btn btn-success" name="i" value=@i>Feed @Model[i].Name</button>
                        </form>
                    </li>

                    <li>Fatigue: @Model[i].Fatigue 
                        <form method="post" action="/tamagotchis/sleep/{i}">
                            <button type="submit" class="btn btn-success" name="i" value=@i>Put @Model[i].Name to sleep</button>
                        </form>
                    </li>

                    <li>Mood: @Model[i].Mood 
                        <form method="post" action="/tamagotchis/play/{i}">
                            <button type="submit" class="btn btn-success" name="i" value=@i>Play with @Model[i].Name</button>
                        </form>
                    </li>
                </ul>
            }
        </div>
    </body>
</html>